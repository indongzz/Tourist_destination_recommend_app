<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <!-- 위에 같은 include back btn, top title 때문에 따로 include 안함 -->
    <LinearLayout
        android:id="@+id/ll_top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageButton
            android:id="@+id/drawer_backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/backbtn"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/drawer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:theme="@style/TitleFont"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <TextView
        android:id="@+id/post_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/ll_top_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="20dp"
        />

    <TextView
        android:id="@+id/post_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작성자"
        android:textColor="@color/lightGray"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/post_title"
        app:layout_constraintLeft_toLeftOf="@id/post_title"
        android:layout_marginTop="5dp"
        />

    <RatingBar
        android:id="@+id/post_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:isIndicator="true"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:theme="@style/RatingBarStyle"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/post_writer"
        app:layout_constraintLeft_toLeftOf="@id/post_title"
        />

    <TextView
        android:id="@+id/post_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내용"
        android:textColor="@color/lightGray"
        app:layout_constraintTop_toBottomOf="@id/post_rating"
        app:layout_constraintLeft_toLeftOf="@id/post_title"
        android:layout_marginTop="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightGray"
        app:layout_constraintTop_toBottomOf="@id/post_content"
        android:layout_margin="10dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comment_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/post_content"
        app:layout_constraintLeft_toLeftOf="@id/post_title"
        android:layout_marginTop="20dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>



